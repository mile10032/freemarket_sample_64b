.address-wrapper
  .address-header
    .address-header__logo
      = image_tag "/ロゴ/image.png"
    .address-header__ba  
      .mo-ji
        .moji 会員情報
        .moji2 お届け先住所入力
        .moji1 支払い方法
        .moji 完了
      .ge-ji
        .maruru
        .sensen
        .maruru
        .sen
        .maru
        .sen
        .maru
  .title 
    %h2 住所入力
  = form_for @shipping,url:address_create_users_path,method:"post" do |f|
    = f.hidden_field :user_id,value:current_user.id
    .form-address
      .form-address__content
        .s-name.ss
          .s-name__top
            .label お名前
            .label-mark 必須
          .s-name__bottom
            = f.text_field :s_family_name,placeholder:"例）山田"
            = f.text_field :s_first_name,placeholder:"例）彩"
        .s-kana.ss
          .s-kana__top
            .label お名前カナ
            .label-mark 必須
          .s-kana__bottom
            = f.text_field :s_kana_family_name,placeholder:"例）ヤマダ"
            = f.text_field :s_kana_first_name,placeholder:"例）アヤ"
        .s-num.ss
          .s-num__top
            .label 郵便番号
            .label-mark 必須
          .s-num__bottom
            = f.text_field :address_number,placeholder:"例）123-4567"
        .s-state.ss
          .s-state__top
            .label 都道府県
            .label-mark 必須
          .s-state__bottom
            =f.collection_select :prefecture_id, Prefecture.all, :id, :name
        .s-city.ss
          .s-city__top
            .label 市区町村
            .label-mark 必須
          .s-city__bottom
            = f.text_field :city,placeholder:"例）横浜市緑区"
        .s-towns.ss
          .s-town__top
            .label 番地
            .label-mark 必須
          .s-town__bottom
            = f.text_field :town,placeholder:"例）青山1−1−1"
        .s-build.ss
          .s-build__top
            .label 建物名
            .label-mark-n 任意
          .s-build__bottom
            = f.text_field :building,placeholder:"例）柳ビル103"
        .s-phone.ss
          .s-phone__top
            .label 電話番号
            .label-mark-n 任意
          .s-phone__bottom
            = f.text_field :s_tel,placeholder:"例）09012345678"
        .s-submit.ss
          = f.submit value:"次へ進む"
    .s-footer
      %ul.s-footer__ul
        %li.s-footer__ul__li
          = link_to "プライバシーポリシー", "#"
        %li.s-footer__ul__li
          = link_to "メルカリ利用規約", "#"
        %li.s-footer__ul__li
          = link_to "特定商取引に関する表記", "#"
      = image_tag "/ロゴ/image (2).png"